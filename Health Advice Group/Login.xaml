<Window x:Class="Health_Advice_Group.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Health_Advice_Group"
        mc:Ignorable="d"
        Title="Health Advice Group" Height="350" Width="350">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="150">
            <Label Name="lblEmail" Content="email" HorizontalAlignment="Left"/>
            <TextBox x:Name="txtEmail" Width="150" MaxWidth="150"/>
            <Label Name="lblPassword" Content="password" HorizontalAlignment="Left"/>
            <PasswordBox Name="passwordbox" Width="150" MaxWidth="150"/>
            <Button Name="btnLogin" Content="Log In" Width="75" Margin="5"/>
            <Button Name="btnRegister" Content="Register" Width="75" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>

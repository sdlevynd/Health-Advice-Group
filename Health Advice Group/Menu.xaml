<Window x:Class="Health_Advice_Group.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Health_Advice_Group"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="450">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/landscape.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel VerticalAlignment="Center">
            <TextBox Name="txtLocation" Width="100" MaxWidth="100"/>
            <Button Name="btnUpdateLocation" Content="Update Location" Width="100" Click="btnUpdateLocation_Click"/>
            <ScrollViewer  MaxHeight="200" Height="200">
                <TextBlock Name="output" TextWrapping="Wrap"/>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
